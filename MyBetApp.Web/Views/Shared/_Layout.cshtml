    <nav class="navbar navbar-brand navbar-fixed-top">

        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Punter" asp-action="Index" class="navbar-brand">WELCOME TO MY BET APP</a>

            </div>
            <ul class="nav navbar-nav">

                @if (User.Identity.IsAuthenticated)
                {

                    <li class="dropdown active">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            PUNTER
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">

                            <li><a asp-area="" asp-controller="Punter" asp-action="Index">Punter Stakes</a></li>

                        </ul>
                    </li>
                    if (User.IsInRole("oddhandler"))
                    {

                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                ODD HANDLER
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">

                                <li><a asp-area="" asp-controller="Punter" asp-action="AllStakes">Punter Stakes</a></li>
                                <li><a asp-area="" asp-controller="OddHandler" asp-action="Index">Odds</a></li>

                            </ul>
                            <ul>
                                @await Html.PartialAsync("_LoginPartial")
                            </ul>


                        </li>
                    }
                }

               

            </ul>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - MyBetApp by Ogwu Daniel Ifeanyichukwu</p>
        </footer>
    </div>

